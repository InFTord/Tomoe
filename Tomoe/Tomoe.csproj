<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Tomoe</RootNamespace>
    <Version>2.2.1</Version>
  </PropertyGroup>
  <Choose>
    <When Condition="'$(Configuration)' == 'debug'">
      <PropertyGroup>
        <Version>$(Version)-dev</Version>
      </PropertyGroup>
    </When>
  </Choose>
  <ItemGroup>
    <ProjectReference Include="../libs/DSharpPlus/DSharpPlus/DSharpPlus.csproj" />
    <ProjectReference Include="../libs/DSharpPlus/DSharpPlus.CommandsNext/DSharpPlus.CommandsNext.csproj" />
    <ProjectReference Include="../libs/DSharpPlus/DSharpPlus.SlashCommands/DSharpPlus.SlashCommands.csproj" />
    <PackageReference Include="Humanizer" Version="2.14.1" />
    <PackageReference Include="EFCore.NamingConventions" Version="6.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.10" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="6.0.10">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="6.0.7" />
    <PackageReference Include="Serilog" Version="2.12.0" />
    <PackageReference Include="Serilog.Enrichers.Thread" Version="3.1.0" />
    <PackageReference Include="Serilog.Extensions.Hosting" Version="5.0.1" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
  </ItemGroup>
</Project>